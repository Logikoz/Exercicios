#include <stdlib.h>
#include <stdio.h>

#define Max 2

void MostrarMatriz(int M[Max][Max]){
	int i, j;
	for(i = 0; i < Max; i++){
		for(j = 0; j < Max; j++){
			printf("%i\t", M[i][j]);
		}
		printf("\n");
	}
}

void CalcularVeto_b(int matrizA[Max][Max], int vetor_b[], int vetorX[]) {
	int i, j;
	int aux[2];
	for(i = 0; i < Max; i++)
	{
		for(j = 0; j < Max; j++)
		{
			aux[j] = matrizA[i][j] * vetor_b[j];
		}
		vetorX[i] = aux[0] + aux[1];
	}
}

void CalcularDetA(int A[2][2], int *detA){
	int aux[Max];
	aux[0] = A[0][0] * A[1][1];
	aux[0] = A[0][1] * A[1][0];
	*detA = aux[0] - aux[1];
}

void CalcularInversaA(int A[Max][Max], int _A[Max][Max], int vetor_b[]){
	int i, j;
	for(i = 0; i < Max; i++){
		for(j = 0; j < Max; j++){			
			if(i == j)
				_A[i][j] = (i == 0) ? A[i+1][j+1] : A[i-1][j-1];
			else
				_A[i][j] = A[i][j] * -1;
		}
	}
}

void main(){

	int A[Max][Max] = { { 1, 2}, {3, 4} };
	int _A[Max][Max];
	int v[] = { 1, 2 };

	int X[Max];
	
	int detA;

	CalcularVeto_b(A, v, X);
	CalcularDetA(A, &detA);
	
	printf("Matriz A: \n");
	MostrarMatriz(A);
	
	printf("Vetor b 0: %i\n", X[0]);
	printf("Vetor b 1: %i\n", X[1]);
	printf("Determinante: %i\n", detA);
	
	CalcularInversaA(A, _A, &detA);
	printf("Matriz inversa A: \n");
	MostrarMatriz(_A);
	

	//================================================
	printf("\n\n\n");
	system("pause");
	system("cls");
}

